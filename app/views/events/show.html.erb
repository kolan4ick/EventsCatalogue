<script>
  function onClickImage(element) {
    document.getElementById("imgInImageModal").src = element.src;
    document.getElementById("imageModal").style.display = "block";
  }
</script>
<div class="m-3">
  <h1>
    Назва:
    <%=@event.name%>
    <h1>
      <div type="button" class="photo_link">
        <p>
          <%= image_tag @event.avatar, width:300, height:300, onclick:"onClickImage(this)" %>
        </p>
      </div>
      <h4>
        Опис:
        <%=@event.body%>
      </h4>
      <h4>
        Місце:
        <%=@event.place%>
      </h4>
      <h4>Зображення:</h4>
      <div class="col-9">
        <%@event.images.each do |image|%>
          <div type="button" class="photo_link">
            <%=image_tag image, width:250, height:250, onclick:"onClickImage(this)"%>
          </div>
        <%end%>
      </div>
      <h4>
        Дата початку:
        <%=@event.begin_date%>
      </h4>
      <h4>
        Дата закінчення:
        <%=@event.end_date%>
      </h4>
    </div>
    <% if user_signed_in? %>
      <% pre_event = @event.event_subscribes.find { |eventsub| eventsub.user_id == current_user.id && eventsub.event_id == @event.id} %>
        <% if pre_event %>
          <%= button_to "Відписатись від події", event_event_subscribe_path(@event, pre_event), class:"btn btn-danger", method: :delete %>
        <% else %>
          <%= button_to "Підписатись на подію", event_event_subscribes_path(@event), class:"btn btn-success", method: :post %>
        <% end %>
      <% else %>
        <h4 class"p-2"="class" p-2""="p-2""">Для того, щоб підписатись на подію, вам слід
          <%= link_to "увійти", user_session_path%></h4>
      <% end %>
