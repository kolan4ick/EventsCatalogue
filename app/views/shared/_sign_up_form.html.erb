<div class="modal fade sign_up" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Login to Continue</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="errors_sign_up"></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label:false, placeholder: t("views.modals.email"), autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, label:false, placeholder: t("views.modals.password"), input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, input_html: { autocomplete: "new-password" } %>
          <div class="modal-footer">
            <%= f.button :submit, "Sign up" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
