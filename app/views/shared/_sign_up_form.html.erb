<div class="modal fade sign_up" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t("views.modals.sign_up.title") %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" align="center">
        <div class="errors_sign_up"></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: true, label:false, placeholder: t("views.modals.sign_up.email"), autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :nickname, required: true, label:false, placeholder: t("views.modals.sign_up.nickname"), autofocus: true, input_html: { autocomplete: "nickname" } %>
          <%= f.input :phone, required: true, label:false, placeholder: t("views.modals.sign_up.phone"), autofocus: true, input_html: { autocomplete: "nickname" } %>
          <%= f.input :password, required: true, label:false, placeholder: t("views.modals.sign_up.password"), input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, required: true, label:false, placeholder: t("views.modals.sign_up.password_confirmation"), input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, t("views.modals.sign_up.button.register"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
